{
  "private": true,
  "main": "main/index.js",
  "name": "com.amiiby.macosiftttcontrol",
  "productName": "macOS IFTTT Control",
  "version": "1.0.0",
  "description": "Cloud-Based IFTTT Task Automation Service for macOS.",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "install-dependencies": "resources/cli/install_dependencies",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.18",
    "bootstrap": "^5.1.3",
    "electron-is-dev": "^1.1.0",
    "electron-next": "^3.1.5",
    "react": "^17.0.2",
    "react-bootstrap": "^2.2.3",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "electron": "^13",
    "electron-builder": "^23.0.3",
    "next": "latest",
    "rimraf": "^3.0.0",
    "typescript": "^4.0.5"
  },
  "build": {
    "appId": "com.amiiby.macosiftttcontrol",
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "extraResources": [
      {
        "from": "resources/cli",
        "to": "app/cli"
      },
      {
        "from": "resources/json",
        "to": "app/json"
      },
      {
        "from": "resources/icon.png",
        "to": "app/icon.png"
      }
    ],
    "mac": {
      "icon": "resources/electron.icns"
    }
  },
  "repository": "https://github.com/miyabi-satoh/macos-ifttt-control",
  "keywords": [
    "macos",
    "webhook",
    "ifttt",
    "automation"
  ],
  "author": "miyabi-satoh",
  "license": "MIT"
}
